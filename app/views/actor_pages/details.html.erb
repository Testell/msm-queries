<h1>Actor #<%= @the_actor.id %> details</h1>

<a href="/directors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name%></dd>

  <dt>Dob</dt>
  <dd><%= @the_actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @the_actor.bio%></dd>

  <dt>Image</dt>
  <dd>
    <img src="<%= @the_actor.image %>" width="250">
  </dd>

  <dt>Created at</dt>
  <dd><%= @the_actor.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @the_actor.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>

  <table border="1">
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th></th>
    </tr>
    <% @actor_roles.each do |character| %>
    <tr>
      <td> <%= character.movie.title%></td>
      <td><%= character.movie.year%></td>
      <td><%= character.movie.director.name%></td>
      <td><%= character.name%></td>
      <td>
        <a href="/movies/<%= character.movie.id %>">Show details</a>
      </td>
    </tr>
    <% end %>

  </table>
